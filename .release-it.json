{
  "scripts": {
    "beforeStage": "yarn build; cd dist; zip -r natel-discrete-panel-${version}.zip *",
    "afterRelease": "echo Successfully released ${name} v${version} to ${repo.repository}."
  },
  "npm": {
    "publish": false
  },
  "git": {
    "requireCleanWorkingDir": false
  },
  "dist": {
    "repo": "git@github.com:NatelEnergy/grafana-discrete-panel#dist",
    "baseDir": "dist",
    "files": ["**/*"],
    "github": {
      "release": true,
      "beforeStageCommand": "yarn build;"
    },
    "npm": {
      "publish": false
    }
  }
}
